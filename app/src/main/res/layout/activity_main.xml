<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/llDrawer"
    tools:context=".activity.MainActivity">

    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="@dimen/_60sdp"
            android:background="@color/colorPrimary"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btnDrawer"
                android:padding="@dimen/_8sdp"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_gravity="center"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:src="@drawable/ic_menu"
                app:tint="@color/white" />

            <View
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <ImageView
                android:layout_gravity="center"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:src="@drawable/ic_peagone"
                />

            <View
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <ImageView
                android:layout_marginEnd="@dimen/_20sdp"
                android:layout_gravity="center"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:src="@drawable/ic_profile"
                app:tint="@color/white" />


        </LinearLayout>

        <ImageView
            android:id="@+id/btnFual"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_gravity="center"
            android:src="@drawable/ic_petrol"
            android:layout_width="@dimen/_130sdp"
            android:layout_height="@dimen/_130sdp"/>

        <TextView
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_gravity="center"
            android:text="FUEL REFILLING"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/btnMotercycle"
            android:layout_marginTop="@dimen/_50sdp"
            android:layout_gravity="center"
            android:src="@drawable/ic_motercycle"
            android:layout_width="@dimen/_130sdp"
            android:layout_height="@dimen/_130sdp"/>

        <TextView
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_gravity="center"
            android:text="VEHICLE REPAIR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:background="@color/colorPrimary"
        android:id="@+id/nav_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true">


    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>